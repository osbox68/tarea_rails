<p style="color: green"><%= notice %></p>

<%= form_with url: colaborators_path, method: :get do |form| %>
  <%= form.text_field :query_text, placeholder: 'Escribe AQUI', value: params[:query_text] %>
  <%= form.submit "Buscar..." %>
<% end %>

<h1>Colaborators</h1>

<div id="colaborators">
  <table border="1" class="table">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>EMAIL</th>
        <th>DIRECTION</th>
        <th>Mostrar</th>
      <tr>
    </thead>
    <% @colaborators.each do |colaborator| %>
      <%= render colaborator %>
    <% end %>
  </table>
</div>

<%== pagy_bootstrap_nav(@pagy) %>



<%= link_to "Agregar Colaborador", new_colaborator_path %>
